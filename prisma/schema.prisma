enum PostCategory{
    CONFESSIONS
    TEA
    WISH
    NEEDADVICE
}

enum Role{
    ADMIN
    USER
}

model User{
    id String @id @default(cuid())
    nickname String?
    role Role @default(USER)
    email String @unique
    image String?

    posts Post[]
}


model Post {
    id String @id @default(cuid())

    category PostCategory @default(TEA)
    createdat Datetime @default(now())

    facebookurl String?

    author User @relation(fields:[authorId], references:[id])
    authorId String
}
